AgentCache=~/.ssh/agent

[ -f ${AgentCache} ] && {
  source ${AgentCache}
  kill -0 $SSH_AGENT_PID >/dev/null 2>&1
}
[ $? != 0 ] && {
  ssh-agent > ${AgentCache}
  source ${AgentCache}
}

[[ "${OSTYPE}" =~ darwin* ]] && {
  (( ${OSTYPE#darwin} >= 20.0 )) && {
    ssh-add --apple-load-keychain
  } || {
    ssh-add -A
  }
}
