#
# Load settings for the local environment
#

function AddPriorPath() {
    [ -d $1 ] && PATH=$1:$PATH
}

function AddExtraPath() {
    [ -d $1 ] && PATH=$PATH:$1
}

function AddExtraManPath() {
  [ -d $1 ] && {
    if [ -n "$MANPATH" ]; then
      MANPATH=$MANPATH:$1
    else
      MANPATH=$1
    fi
  }
}

function AddExtraInfoPath() {
  [ -d $1 ] && {
    if [ -n "$INFOPATH" ]; then
      INFOPATH=$INFOPATH:$1
    else
      INFOPATH=$1
    fi
  }
}

case "${OSTYPE}" in
    linux*)
	LoadConfiguration linux
	;;
    darwin*)
	LoadConfiguration macosx
	;;
    cygwin*)
	LoadConfiguration cygwin
	;;
esac

AddPriorPath $HOME/xbin
AddPriorPath $HOME/bin

unset -f AddPriorPath
unset -f AddExtraPath
